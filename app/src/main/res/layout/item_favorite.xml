<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AlphaStream.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Poster -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/favorite_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_poster"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Type Badge -->
            <TextView
                android:id="@+id/type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="6dp"
                android:background="@drawable/type_badge_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="FILM"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:text="SÉRIE" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/watch_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="4dp"
                android:max="100"
                android:progress="0"
                android:progressTint="?attr/colorPrimary"
                android:visibility="gone"
                tools:progress="65"
                tools:visibility="visible" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/favorite_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:text="Titre du contenu"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="The Witcher" />

            <!-- Description -->
            <TextView
                android:id="@+id/favorite_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2019 • 3 saisons • 24 épisodes • ★ 8.5"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp"
                tools:text="2019 • 2h 30min • ★ 8.2" />

            <!-- Genres -->
            <TextView
                android:id="@+id/favorite_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Fantasy, Drama, Action"
                android:textColor="@color/text_secondary_dark"
                android:textSize="11sp"
                tools:text="Action, Adventure, Sci-Fi" />

            <!-- Synopsis -->
            <TextView
                android:id="@+id/favorite_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Synopsis du contenu..."
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp"
                tools:text="Geralt of Rivia, a solitary monster hunter, struggles to find his place in a world where people often prove more wicked than beasts." />

            <!-- Added Date -->
            <TextView
                android:id="@+id/added_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ajouté le 23 octobre 2025"
                android:textColor="@color/text_secondary_dark"
                android:textSize="10sp"
                tools:text="Ajouté le 15 octobre 2025" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <!-- Remove from Favorites -->
            <ImageView
                android:id="@+id/remove_favorite_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Retirer des favoris"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_favorite"
                app:tint="@color/error" />

            <!-- Play Button -->
            <ImageView
                android:id="@+id/play_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/cd_play_button"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_play"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

    <!-- Completed Badge -->
    <ImageView
        android:id="@+id/completed_badge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:background="@drawable/circle_background"
        android:padding="4dp"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:tint="@color/accent_green"
        tools:visibility="visible" />

</com.google.android.material.card.MaterialCardView>