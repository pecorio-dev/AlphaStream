<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tv_button_focused" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke 
                        android:width="2dp" 
                        android:color="@color/tv_focus_stroke" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_button_pressed" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_button_normal" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>