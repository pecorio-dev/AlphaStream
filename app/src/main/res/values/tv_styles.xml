<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TV Focus Styles -->
    <style name="TVFocusableCard" parent="Widget.AlphaStream.Card">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/tv_card_selector</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/tv_card_animator</item>
    </style>
    
    <style name="TVFocusableButton" parent="Widget.Material3.Button">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/tv_button_selector</item>
        <item name="android:stateListAnimator">@animator/tv_button_animator</item>
        <item name="android:textColor">@color/tv_button_text_selector</item>
    </style>
    
    <style name="TVFocusableImageButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/tv_icon_button_selector</item>
        <item name="android:stateListAnimator">@animator/tv_button_animator</item>
    </style>
    
    <!-- TV Navigation Styles -->
    <style name="TVNavigationContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/tv_navigation_background</item>
    </style>
    
    <style name="TVNavigationItem" parent="TVFocusableButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- TV Content Grid Styles -->
    <style name="TVContentGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <style name="TVContentCard" parent="TVFocusableCard">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- TV Text Styles -->
    <style name="TVTitle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/tv_text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TVSubtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/tv_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TVDescription" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/tv_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
</resources>